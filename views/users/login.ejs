<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h3 class="col-6 offset-3 bt-3">Login</h3>
  <div class=" col-6 offset-3">
    <form action="/login" method="post" class="needs-validation mb-3" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" id="username" class="form-control" required />
          
          <div class="valid-feedback">username looks good!</div>
          <div class="invalid-feedback">Please Write username</div>
        </div>
        
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" required />
          
          </div>
          <button class="btn btn-success">LogIn</button>
      </form>
  
  </div>
</div>
